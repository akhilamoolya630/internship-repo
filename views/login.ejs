<%- include('header-login') %>

<!-- Login Section -->
<section class="login-page">
  <div class="login-container">
    <div class="login-wrapper">
      <!-- Login Image Side -->
      <div class="login-image-side">
        <div class="login-image-overlay"></div>
        <div class="login-image-content">
          <div class="brand-section">
            <i class="fas fa-graduation-cap brand-icon"></i>
            <h1 class="brand-title">AIONYX</h1>
          </div>
          <h2>Welcome Back to Your Learning Journey!</h2>
          <p class="subtitle">Continue mastering technical interviews and advance your career</p>
          
          <div class="login-features">
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fas fa-book-open"></i>
              </div>
              <div class="feature-text">
                <h4>Unlimited Course Access</h4>
                <p>Learn at your own pace</p>
              </div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fas fa-chart-line"></i>
              </div>
              <div class="feature-text">
                <h4>Track Your Progress</h4>
                <p>Monitor your achievements</p>
              </div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fas fa-certificate"></i>
              </div>
              <div class="feature-text">
                <h4>Earn Certificates</h4>
                <p>Showcase your skills</p>
              </div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fas fa-users"></i>
              </div>
              <div class="feature-text">
                <h4>Join Community</h4>
                <p>Connect with learners</p>
              </div>
            </div>
          </div>

          <div class="stats-section">
            <div class="stat-item">
              <h3>50K+</h3>
              <p>Active Students</p>
            </div>
            <div class="stat-item">
              <h3>200+</h3>
              <p>Expert Courses</p>
            </div>
            <div class="stat-item">
              <h3>98%</h3>
              <p>Success Rate</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Login Form Side -->
      <div class="login-form-side">
        <div class="login-form-container">
          <div class="login-header">
            <h2>Sign In</h2>
            <p>Welcome back! Please enter your details</p>
          </div>

          <!-- Social Login Buttons (Top) -->
          <div class="social-login-buttons">
            <button class="social-btn google-btn" type="button">
              <i class="fab fa-google"></i>
              <span>Continue with Google</span>
            </button>
            <button class="social-btn github-btn" type="button">
              <i class="fab fa-github"></i>
              <span>Continue with GitHub</span>
            </button>
          </div>

          <div class="divider">
            <span>Or continue with email</span>
          </div>

          <form action="/login" method="POST" class="login-form">
            <div class="form-group">
              <label for="email">Email Address</label>
              <div class="input-wrapper">
                <i class="fas fa-envelope input-icon"></i>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  placeholder="name@example.com" 
                  required
                  autocomplete="email"
                >
              </div>
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <div class="input-wrapper">
                <i class="fas fa-lock input-icon"></i>
                <input 
                  type="password" 
                  id="password" 
                  name="password" 
                  placeholder="Enter your password" 
                  required
                  autocomplete="current-password"
                >
                <button type="button" class="toggle-password" onclick="togglePassword()">
                  <i class="fas fa-eye" id="toggleIcon"></i>
                </button>
              </div>
            </div>

            <div class="form-options">
              <label class="remember-me">
                <input type="checkbox" name="remember" id="remember">
                <span class="checkbox-custom"></span>
                <span class="checkbox-label">Remember me for 30 days</span>
              </label>
              <a href="#" class="forgot-password">Forgot password?</a>
            </div>

            <button type="submit" class="btn-login-submit">
              <span>Sign In</span>
              <i class="fas fa-arrow-right"></i>
            </button>
          </form>

          <div class="signup-prompt">
            <p>Don't have an account? <a href="#" class="signup-link">Sign up for free</a></p>
          </div>

          <div class="login-footer">
            <p>By signing in, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
function togglePassword() {
  const passwordInput = document.getElementById('password');
  const toggleIcon = document.getElementById('toggleIcon');
  
  if (passwordInput.type === 'password') {
    passwordInput.type = 'text';
    toggleIcon.classList.remove('fa-eye');
    toggleIcon.classList.add('fa-eye-slash');
  } else {
    passwordInput.type = 'password';
    toggleIcon.classList.remove('fa-eye-slash');
    toggleIcon.classList.add('fa-eye');
  }
}

// Add smooth animations on load
document.addEventListener('DOMContentLoaded', function() {
  const formSide = document.querySelector('.login-form-side');
  const imageSide = document.querySelector('.login-image-side');
  
  setTimeout(() => {
    if (formSide) formSide.style.opacity = '1';
    if (imageSide) imageSide.style.opacity = '1';
  }, 100);
});
</script>

